{
  "name": "Arronax",
  "version": "0.1.0",
  "description": "A multi-chain block explorer.",
  "main": "index.js",
  "scripts": {
    "lint": "tslint -c tslint.json --format stylish -p .",
    "start": "react-scripts-ts start",
    "start:zeronet": "react-scripts-ts start && NODE_ENV=zeronet",
    "start:betanet": "react-scripts-ts start && NODE_ENV=betanet",
    "tsc": "tsc -p ./ --noEmit",
    "tsc:watch": "tsc -p ./ --noEmit -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:update": "jest -u"
  },
  "lint-staged": {
    "*.{ts, tsx}": [
      "tslint -c tslint.json --format stylish -p"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Cryptonomic/Arronax.git"
  },
  "keywords": [
    "Tezos",
    "Ethereum"
  ],
  "author": "Cryptonomic Inc",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Cryptonomic/Arronax/issues"
  },
  "homepage": "https://github.com/Cryptonomic/Arronax#readme",
  "dependencies": {
    "conseiljs": "^0.1.25",
    "querystring": "^0.2.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-redux": "^5.0.7",
    "redux": "4.0.0",
    "styled-components": "^3.4.5",
    "ts-react-json-table": "^0.1.1"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/jest": "^23.3.7",
    "@types/react": "^16.4.12",
    "@types/react-dom": "^16.0.7",
    "@types/react-redux": "^6.0.6",
    "@types/redux": "^3.6.31",
    "awesome-typescript-loader": "^5.2.0",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "husky": "^0.14.3",
    "jest": "^23.6.0",
    "node-fetch": "^1.7.3",
    "prettier": "^1.14.2",
    "react-scripts-ts": "2.17.0",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^23.10.4",
    "tslint-config-airbnb": "^5.10.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "3.0.1"
  }
}
